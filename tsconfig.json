{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "target": "ES6",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "baseUrl": "./"
  },

  "include": ["src"],
  "exclude": [
    "node_modules/**/*"
  ]

}